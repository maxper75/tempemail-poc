<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/DbmailEnvelopeList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{dbmailEnvelopeHome.wire}"/>

   <param name="dbmailEnvelopeFrom"/>
   <param name="dbmailEnvelopeId" value="#{dbmailEnvelopeHome.dbmailEnvelopeId}"/>
   <param name="dbmailPhysmessageFrom"/>
   <param name="dbmailPhysmessageId" value="#{dbmailPhysmessageHome.dbmailPhysmessageId}"/>



   <navigation from-action="#{dbmailEnvelopeHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/DbmailEnvelope.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailEnvelopeHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/DbmailEnvelope.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailEnvelopeHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/DbmailEnvelopeList.xhtml"/>
      </rule>
   </navigation>

</page>
