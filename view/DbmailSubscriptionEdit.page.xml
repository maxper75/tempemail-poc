<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/DbmailSubscriptionList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{dbmailSubscriptionHome.wire}"/>

   <param name="dbmailSubscriptionFrom"/>
   <param name="dbmailSubscriptionMailboxId" value="#{dbmailSubscriptionHome.dbmailSubscriptionId.mailboxId}"/>
   <param name="dbmailSubscriptionUserId" value="#{dbmailSubscriptionHome.dbmailSubscriptionId.userId}"/>
   <param name="dbmailMailboxesFrom"/>
   <param name="dbmailMailboxesMailboxIdnr" value="#{dbmailMailboxesHome.dbmailMailboxesMailboxIdnr}"/>
   <param name="dbmailUsersFrom"/>
   <param name="dbmailUsersUserIdnr" value="#{dbmailUsersHome.dbmailUsersUserIdnr}"/>
   <param name="dbmailAutoNotificationsFrom"/>
   <param name="dbmailAutoNotificationsUserIdnr" value="#{dbmailAutoNotificationsHome.dbmailAutoNotificationsUserIdnr}"/>

   <param name="dbmailAutoRepliesFrom"/>
   <param name="dbmailAutoRepliesUserIdnr" value="#{dbmailAutoRepliesHome.dbmailAutoRepliesUserIdnr}"/>





   <navigation from-action="#{dbmailSubscriptionHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/DbmailSubscription.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailSubscriptionHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/DbmailSubscription.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailSubscriptionHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/DbmailSubscriptionList.xhtml"/>
      </rule>
   </navigation>

</page>
