<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/DbmailReplycacheList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{dbmailReplycacheHome.wire}"/>

   <param name="dbmailReplycacheFrom"/>
   <param name="dbmailReplycacheFromAddr" value="#{dbmailReplycacheHome.dbmailReplycacheId.fromAddr}"/>
   <param name="dbmailReplycacheHandle" value="#{dbmailReplycacheHome.dbmailReplycacheId.handle}"/>
   <param name="dbmailReplycacheLastseen" value="#{dbmailReplycacheHome.dbmailReplycacheId.lastseen}"/>
   <param name="dbmailReplycacheToAddr" value="#{dbmailReplycacheHome.dbmailReplycacheId.toAddr}"/>


   <navigation from-action="#{dbmailReplycacheHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/DbmailReplycache.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailReplycacheHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/DbmailReplycache.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailReplycacheHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/DbmailReplycacheList.xhtml"/>
      </rule>
   </navigation>

</page>
