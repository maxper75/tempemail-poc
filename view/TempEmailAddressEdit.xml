<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/TempMailboxList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{tempEmailAddressHome.wire}"/>

   
   <param name="tempEmailAddressName" value="#{tempEmailAddress.Name}"/>
   <param name="tempEmailAddressEmailAddress" value="#{tempEmailAddress.emailAddress}"/>
   <param name="tempEmailAddressRetentionDays" value="#{tempEmailAddress.retentionDays}"/>

   

   <navigation from-action="#{tempEmailAddressHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/TempEmailAddressList.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tempEmailAddressHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/TempEmailAddress.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tempEmailAddressHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/TempEmailAddressList.xhtml"/>
      </rule>
   </navigation>

</page>
