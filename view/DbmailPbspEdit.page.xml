<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/DbmailPbspList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{dbmailPbspHome.wire}"/>

   <param name="dbmailPbspFrom"/>
   <param name="dbmailPbspIdnr" value="#{dbmailPbspHome.dbmailPbspIdnr}"/>


   <navigation from-action="#{dbmailPbspHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/DbmailPbsp.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailPbspHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/DbmailPbsp.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailPbspHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/DbmailPbspList.xhtml"/>
      </rule>
   </navigation>

</page>
