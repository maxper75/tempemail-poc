<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/DbmailMessagesList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{dbmailMessagesHome.wire}"/>

   <param name="dbmailMessagesFrom"/>
   <param name="dbmailMessagesMessageIdnr" value="#{dbmailMessagesHome.dbmailMessagesMessageIdnr}"/>
   <param name="dbmailMailboxesFrom"/>
   <param name="dbmailMailboxesMailboxIdnr" value="#{dbmailMailboxesHome.dbmailMailboxesMailboxIdnr}"/>
   <param name="dbmailUsersFrom"/>
   <param name="dbmailUsersUserIdnr" value="#{dbmailUsersHome.dbmailUsersUserIdnr}"/>
   <param name="dbmailAutoNotificationsFrom"/>
   <param name="dbmailAutoNotificationsUserIdnr" value="#{dbmailAutoNotificationsHome.dbmailAutoNotificationsUserIdnr}"/>

   <param name="dbmailAutoRepliesFrom"/>
   <param name="dbmailAutoRepliesUserIdnr" value="#{dbmailAutoRepliesHome.dbmailAutoRepliesUserIdnr}"/>



   <param name="dbmailPhysmessageFrom"/>
   <param name="dbmailPhysmessageId" value="#{dbmailPhysmessageHome.dbmailPhysmessageId}"/>



   <navigation from-action="#{dbmailMessagesHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/DbmailMessages.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailMessagesHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/DbmailMessages.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{dbmailMessagesHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/DbmailMessagesList.xhtml"/>
      </rule>
   </navigation>

</page>
