	no-conversation-view-id="/TempMailboxList.xhtml" login-required="true">

	<begin-conversation join="true" flush-mode="MANUAL" />
	<action execute="#{addressToPullHome.wire}" />

	<param name="permanentUsersUserIdnr" value="#{permanentUserHome.permanentUserUserIdnr}" />
	<param name="addressToPullId" value="#{addressToPullHome.id}" />

