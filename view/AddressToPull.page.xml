	<navigation from-action="#{addressToPullHome.persist}">
		<rule if-outcome="persisted">
			<end-conversation />
			<redirect view-id="/PermanentUser.xhtml" />
		</rule>
	</navigation>
	<navigation from-action="#{addressToPullHome.update}">
		<rule if-outcome="updated">
			<end-conversation />
			<redirect view-id="/PermanentUser.xhtml" />
		</rule>
	</navigation>
	<navigation from-action="#{addressToPullHome.remove}">
		<rule if-outcome="removed">
			<end-conversation />
			<redirect view-id="/PermanentUser.xhtml" />
		</rule>
	</navigation>


