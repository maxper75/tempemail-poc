<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Resource Definitions //EN"
    "http://www.sun.com/software/appserver/dtds/sun-resources_1_3.dtd">
<resources>
    <jdbc-connection-pool
        name="tempemailPool"
        datasource-classname="org.postgresql.jdbc3.Jdbc3ConnectionPool"
        res-type="javax.sql.DataSource">
        <property name="database" value="jdbc:postgresql://localhost/dbmail"/> <!-- HSQLDB uses database instead of url -->
        <property name="url" value="jdbc:postgresql://localhost/dbmail"/>
        <property name="user" value="dbmail"/>
        <property name="password" value=""/> <!-- Use the value "()" for an empty password -->
    </jdbc-connection-pool>
    <jdbc-resource
        jndi-name="tempemailDatasource"
        pool-name="tempemailPool"
        enabled="true"
        object-type="user"/>
</resources>
